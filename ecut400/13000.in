&control
    calculation='scf'
    pseudo_dir = '../pslibrary/pbe/PSEUDOPOTENTIALS/',
    outdir='./outputs',
    disk_io='high'
/
&system
    ibrav= 1, celldm(1)=20.0, nat=  3, ntyp= 2,
    ecutwfc = 400.0, nosym=.true., occupations='smearing',
    smearing='m-v', degauss=0.025
/
